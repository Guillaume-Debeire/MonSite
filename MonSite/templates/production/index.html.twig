{% extends 'base.html.twig' %}

{% block title %}Mes Productions{% endblock %}

{% block body %}
    <h1>Mes Productions</h1>

    <table class="table">
        <tbody>
        {% for production in productions %}
            <tr>
                <td><a href="">{{ production.name }}</a></td>
                <td>
                    <a href="{{ path('production_show', {'id': production.id}) }}">show</a>
                    <a href="{{ path('production_edit', {'id': production.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('production_new') }}">Create new</a>
{% endblock %}
