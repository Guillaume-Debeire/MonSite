            </div>
            <div class="show_right">
                <div class="show_box">
                    <h3 class="show_box_title">Documents</h3>
                    <a class="production_card_link" href="{{ asset("assets/documents/plantopia/mcd_v8.svg") }}">
                        <div class="production_card_exemple">
                            <h4>Nom de la production</h4>
                        </div>
                    </a>
                    {% for doc in docs %}
                    <a class="production_card_link" href="{{ doc.path }}">
                        <div class="production_card_exemple">
                            <h4>{{ doc.name }}</h4>
                        </div>
                    </a>
                    {% else %}
                    {% endfor %}
                    <a class="production_card_link" href="">
                        <div class="production_card_exemple">
                            <h4>Nom de la production</h4>
                        </div>
                    </a>
